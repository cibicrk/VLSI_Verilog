class transaction;
  randc bit a,b;
  bit sum,carry;
  
  constraint con1{a inside{0,1}; b inside {0,1};}
  
  function void display(string name);
    $display("---------------------------------");
    $display("[%s] a=%b,b=%b,sum=%b,carry=%b",name,a,b,sum,carry);
    $display("--------------------------------------");
    endfunction
endclass    
  
